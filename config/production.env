# Продакшен настройки для хостинга
# Скопируйте этот файл в .env на хостинге

# Режим ответа (json для нового фронтенда, legacy для старого)
RESPONSE_MODE=json

# Включить все улучшения качества
ENABLE_GUARD=true
ENABLE_NORMALIZATION=true
ENABLE_FOLLOWUPS=true
ENABLE_EMPATHY=true
POSTPROCESS_STRIP_TEXTUAL_CTA=true

# UX улучшения
ENABLE_SMART_FOLLOWUPS=true
ENABLE_ENHANCED_EMPATHY=true
SUPPRESS_EMPATHY_CLOSER_WHEN_CTA=true

# Пороги (целимся в 5-15% low_relevance)
GUARD_THRESHOLD=0.35
# Если видишь редкую "воду" - подними до 0.40

# Дополнительные настройки
FLASK_ENV=production
FLASK_DEBUG=false

# Настройки логирования
LOG_LEVEL=INFO
LOG_DIR=/root/cesi-bot/logs



