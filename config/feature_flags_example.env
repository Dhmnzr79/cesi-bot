# Пример конфигурации feature flags для новой системы ответов
# Скопируйте в .env и настройте под свои нужды

# === ОСНОВНЫЕ НАСТРОЙКИ ===

# Режим ответа: json (новый) или legacy (старый)
RESPONSE_MODE=legacy

# === НОВЫЕ ФУНКЦИИ ===

# Включить followups (связанные вопросы)
ENABLE_FOLLOWUPS=false

# Включить эмпатию
ENABLE_EMPATHY=false

# Включить guard систему (защита от галлюцинаций)
ENABLE_GUARD=false

# Включить нормализацию запросов (ё→е)
ENABLE_NORMALIZATION=false

# === POST-PROCESSING ===

# Удалять CTA из текста если есть UI кнопка
POSTPROCESS_STRIP_TEXTUAL_CTA=false

# === ПОРОГИ ===

# Порог релевантности для guard системы (0.0-1.0)
GUARD_THRESHOLD=0.35

# === СУЩЕСТВУЮЩИЕ НАСТРОЙКИ ===

# OpenAI API ключ
OPENAI_API_KEY=your_openai_api_key_here

# Email настройки
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_RECEIVER=admin@example.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

